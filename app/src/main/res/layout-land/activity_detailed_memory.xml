<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/activityDetailedMemoryEtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/activityDetailedMemoryImgMemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/default_memory_160"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

            <EditText
                android:id="@+id/activityDetailedMemoryEtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_weight="5"
                android:gravity="center"/>

            <Button
                android:id="@+id/activityDetailedMemoryBtUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:layout_marginTop="10dp"
                android:padding="2dp"/>

            <ProgressBar
                android:id="@+id/progressBarDetailedMemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:visibility="gone"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
